<!DOCTYPE html>
<html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

<!-- Nav Bar -->
<div class="w3-top">
  <div class="w3-bar w3-white w3-wide w3-padding w3-card-2">
    <%= link_to '7-Eleven Stores', root_path %>
    <div class="w3-right w3-hide-small">
      <%= link_to 'Stores', admin_stores_path, class: "w3-bar-item w3-button" %>
      <%= link_to 'Products', admin_products_path, class: "w3-bar-item w3-button" %>
      <%= link_to 'Users', admin_users_path, class: "w3-bar-item w3-button" %>
      <%= link_to 'Orders', admin_orders_path, class: "w3-bar-item w3-button" %>

    </div>
  </div>
</div>

<!-- Page content -->
<div class="w3-content w3-padding" style="max-width:1564px">

  <!-- About Section -->
  <div class="w3-container w3-padding-32">
    <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16">Orders</h3>
  </div>

  <div class="w3-container">

     <div class="w3-responsive">
       <table class="w3-table-all">
         <tr>
           <th>Order ID</th>
           <th></th>
           <th></th>
           <th></th>
         </tr>

         <% @orders.each do |order| %>
             <tr class="w3-hover-black">
               <th>Order #<%= order.id %></th>
              <th> <%= link_to 'Details', admin_order_path(order) ,class: "w3-button w3-dark-grey"%> </th>
               <th><%= link_to 'Products in Order', admin_order_order_products_path(order) ,class: "w3-button w3-dark-grey"%> </th>
              <th> <%= link_to 'Delete', admin_order_path(order),method: :delete ,class: "w3-button w3-dark-grey" %> </th>
             </tr>
         <% end %>

       </table>

     </div>

  </div>

</div>

