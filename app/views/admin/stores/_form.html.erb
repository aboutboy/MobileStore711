<%= form_for [:admin,@store] do |f| %>
    <label>Name:</label>
    <%= f.text_field :name %> <br>

    <label>Address:</label>
    <%= f.text_field :address %> <br>

    <label>Opening Time:</label>
    <%= f.text_field :opening_hour %> <br>

    <label>Closing Time:</label>
    <%= f.text_field :closing_hour %> <br>

    <label>Phone:</label>
    <%= f.text_field :phone %> <br>

    <%= f.submit 'Save' %>
<% end %>