<!DOCTYPE html>
<html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

<!-- Nav Bar -->
<div class="w3-top">
  <div class="w3-bar w3-white w3-wide w3-padding w3-card-2">
    <%= link_to '7-Eleven Stores', root_path %>
    <div class="w3-right w3-hide-small">
      <%= link_to 'Stores', admin_stores_path, class: "w3-bar-item w3-button" %>
      <%= link_to 'Products', admin_products_path, class: "w3-bar-item w3-button" %>
      <%= link_to 'Users', admin_users_path, class: "w3-bar-item w3-button" %>
      <%= link_to 'Orders', admin_orders_path, class: "w3-bar-item w3-button" %>

    </div>
  </div>
</div>

<!-- Page content -->
<div class="w3-content w3-padding" style="max-width:1564px">


  <!-- About Section -->
  <div class="w3-container w3-padding-32" id="allUsers">
    <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16"><%= @user.name %></h3>
  </div>

  <!-- User Info -->
  <div class="w3-row-padding w3-grayscale">
        <div class="w3-col l3 m6 w3-margin-bottom">
          <img src="<%= asset_path('lola.png') %>" style="width:80%">
          <div class="w3-container w3-padding-16">
            <h1>Username</h1> <%= @user.username %>
            <h1>Password</h1> <%= @user.password %>
          </div>

        </div>
  </div>

  <!-- Back Button -->
  <div class="w3-container w3-padding-32">
    <%= button_to 'Back', admin_users_path ,class: "w3-button w3-red w3-section", method: :get%>
  </div>

</div>

</body>